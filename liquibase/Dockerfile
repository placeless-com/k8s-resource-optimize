FROM liquibase/liquibase:4.18.0
COPY src/ src
WORKDIR src
ENV PLACELESS_MYSQL_HOSTNAME url
ENV PLACELESS_MYSQL_PASSWORD password
ENV PLACELESS_MYSQL_USERNAME user
ENV PLACELESS_MYSQL_DB placeless
CMD  liquibase update --url jdbc:mysql://$PLACELESS_MYSQL_HOSTNAME/$PLACELESS_MYSQL_DB --password $PLACELESS_MYSQL_PASSWORD --username $PLACELESS_MYSQL_USERNAME